{
  "info": {
    "name": "Rich OneBox Emails API",
    "description": "API collection for testing Rich OneBox Emails backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "System Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/system/status",
          "host": ["{{base_url}}"],
          "path": ["api", "system", "status"]
        }
      }
    },
    {
      "name": "Start IMAP Service",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/system/start-imap",
          "host": ["{{base_url}}"],
          "path": ["api", "system", "start-imap"]
        }
      }
    },
    {
      "name": "Stop IMAP Service",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/system/stop-imap",
          "host": ["{{base_url}}"],
          "path": ["api", "system", "stop-imap"]
        }
      }
    },
    {
      "name": "Add Email Account",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"your-email@gmail.com\",\n  \"password\": \"your-app-password\",\n  \"imapHost\": \"imap.gmail.com\",\n  \"imapPort\": 993,\n  \"secure\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/accounts",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts"]
        }
      }
    },
    {
      "name": "Get All Accounts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/accounts",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts"]
        }
      }
    },
    {
      "name": "Get Account by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/accounts/{{account_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "{{account_id}}"]
        }
      }
    },
    {
      "name": "Test Account Connection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/accounts/{{account_id}}/test",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "{{account_id}}", "test"]
        }
      }
    },
    {
      "name": "Sync Account",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/accounts/{{account_id}}/sync",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "{{account_id}}", "sync"]
        }
      }
    },
    {
      "name": "Get Connection Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/accounts/status",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "status"]
        }
      }
    },
    {
      "name": "Delete Account",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/accounts/{{account_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "{{account_id}}"]
        }
      }
    },
    {
      "name": "Get All Emails",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails",
          "host": ["{{base_url}}"],
          "path": ["api", "emails"]
        }
      }
    },
    {
      "name": "Get Emails with Filters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails?accountId={{account_id}}&category=interested&page=1&limit=10",
          "host": ["{{base_url}}"],
          "path": ["api", "emails"],
          "query": [
            {
              "key": "accountId",
              "value": "{{account_id}}"
            },
            {
              "key": "category",
              "value": "interested"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Search Emails",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails/search?q=meeting&category=interested",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "search"],
          "query": [
            {
              "key": "q",
              "value": "meeting"
            },
            {
              "key": "category",
              "value": "interested"
            }
          ]
        }
      }
    },
    {
      "name": "Get Email by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails/{{email_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "{{email_id}}"]
        }
      }
    },
    {
      "name": "Update Email",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"isRead\": true,\n  \"isFlagged\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/emails/{{email_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "{{email_id}}"]
        }
      }
    },
    {
      "name": "Categorize Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/emails/{{email_id}}/categorize",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "{{email_id}}", "categorize"]
        }
      }
    },
    {
      "name": "Suggest Reply",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/emails/{{email_id}}/suggest-reply",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "{{email_id}}", "suggest-reply"]
        }
      }
    },
    {
      "name": "Get Email Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails/stats",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "stats"]
        }
      }
    },
    {
      "name": "Delete Email",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/emails/{{email_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "{{email_id}}"]
        }
      }
    }
  ]
}


